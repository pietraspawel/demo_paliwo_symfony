{% if cars is not empty %}
    <div class="form-card-300 card mt-3 ms-0">
        <div class="card-body">
            <h4 class="text-center">Lista samochod√≥w</h4>
            <table class="table">
                <tbody>
                {% for car in cars %}
                    <tr>
                        <td class="align-middle">
                            <form method="post" class="fastEdit">
                                <div class="waitSpan d-none text-secondary"><i class="bi bi-hourglass-split rotate-icon"></i></div>
                                <span class="valueSpan">{{ car.description }}</span>
                                <input type="text" name="carDescription" value="{{ car.description }}"  class="form-control d-none"
                                    data-id="{{ car.id }}" data-origin="{{ car.description }}" data-min="3" data-max="255">
                                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ car.id) }}">
                            </form>
                        </td>
                        <td class="text-end">
                            <form class="delete delete-{{ car.id }}" method="post" action="{{ path('app_car_delete', {'id': car.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
                                <button type="button" class="btn btn-sm" data-id="{{ car.id }}" data-description="{{ car.description }}">
                                    <i class="bi-trash text-danger"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
