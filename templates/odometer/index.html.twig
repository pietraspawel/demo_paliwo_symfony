{% extends 'base.html.twig' %}

{% block title %}Odometer index{% endblock %}

{% block body %}
    <h1>Odometer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Fuel</th>
                <th>Price</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for odometer in odometers %}
            <tr>
                <td>{{ odometer.id }}</td>
                <td>{{ odometer.value }}</td>
                <td>{{ odometer.fuel }}</td>
                <td>{{ odometer.price }}</td>
                <td>{{ odometer.date ? odometer.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_odometer_show', {'id': odometer.id}) }}">show</a>
                    <a href="{{ path('app_odometer_edit', {'id': odometer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_odometer_new') }}">Create new</a>
{% endblock %}
